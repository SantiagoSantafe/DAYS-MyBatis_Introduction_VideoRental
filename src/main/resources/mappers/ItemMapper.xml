<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.unisabana.dyas.sampleprj.dao.mybatis.mappers.ItemMapper">

    <select parameterType="map" id="consultarItems" resultMap="ItemResult">
      SELECT i.id as i_id, i.nombre as i_nombre, i.descripcion as i_descripcion, i.fechalanzamiento as i_fechalanzamiento, i.tarifaxdia as i_tarifaxdia, i.formatorenta as i_formatorenta, i.genero as i_genero, TIPOITEM_id FROM VI_ITEMS;
    </select>

    <resultMap id="ItemResult" type="Item">
      <id property="id" column="i_id" />
      <result property="nombre" column="i_nombre" />
      <result property="descripcion" column="i_descripcion" />
      <result property="fechaLanzamiento" column="i_fechalanzamiento" />
      <result property="tarifaxDia" column="i_tarifaxdia" />
      <result property="formatoRenta" column="i_formatorenta" />
      <result property="genero" column="i_genero" />
      <collection property='tipo' ofType='TipoItem' resultMap='edu.unisabana.dyas.sampleprj.dao.mybatis.mappers.TipoItemMapper.TipoItemResult'></collection>
    </resultMap>

  
</mapper>